{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/main.ts", // NestJS 애플리케이션의 시작 파일
        "preLaunchTask": "tsc: build - tsconfig.build.json", // TypeScript 빌드
        "outFiles": ["${workspaceFolder}/dist/**/*.js"] // 빌드된 JS 파일 경로
      }
    ]
  }
  